    "outDir": "./client/dist/",
    "allowJs": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "module": "es6",
    "target": "es2017",
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "h"
  },
  "include": [
    "./client/src/js/index.tsx"
  ]
}
