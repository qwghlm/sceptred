{
  "compilerOptions": {

    "moduleResolution": "node",

    "baseUrl": "./",
    "paths": {
        "Modernizr" : [".modernizrrc"],
        "stats" : ["node_modules/stats.js/src/Stats.js"],
    },
    "outDir": "./client/dist/",

    "allowJs": true,
    // "noImplicitAny": true, FIXME
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,

    "module": "es6",
    "target": "es2017",

    "jsx": "react",

  },
  "include": [
    "./client/src/js/types.d.ts"
  ]
}
